html,body,ul,li,p,h1,h2,h3,h4,h5
  margin 0
  padding 0

ul,li
  list-style none

.video-wrap
  position relative
  user-select none
  margin 0 auto
  .zyf-video
    position absolute
    top 0
    left 0
    background-color: black
    width: 100%
    height 100%
  .video-controls
    position absolute
    bottom 0
    left 0
    opacity .8
    background-color black
    width: 100%
    height: 40px
    display flex
    justify-content space-between
    align-items: center
    .progress-line
      position absolute
      top 0
      left 0
      height: 4px
      width: 100%
      background-color pink
      z-index: 10
      .contral-btn
        display inline-block
        position absolute
        left 0
        top 0px
        height 4px
        width: 10px
        border-radius: 10%
        background-color red
        cursor pointer
      .progress-finished
        width: 0
        height: 4px
        background-color skyblue
    .left-btns
      width 200px
      height: 100%
      background-color black
      display: flex
      justify-content: flex-start
      align-items: center
      color  rgba(255,255,255, .4)
      .play-btn
        font-weight: 500
        font-size: 26px
        margin 0 10px 0 20px
        cursor pointer
        &:hover
          color rgba(255,255,255,.8)
      .next-video
        font-weight: 500
        font-size: 20px
        margin-right 10px
        cursor pointer
        &:hover
          color rgba(255,255,255,.8)
      .progress
        .current-time, .total-time
          display: inline-block
          min-width: 40px
          height: 100%
          font-size 14px
    .right-btns
      position relative
      width 300px
      height: 100%
      display: flex
      justify-content: flex-end
      align-items: center
      background-color black
      > span 
        color rgba(255,255,255,.4)
        font-size 20px
        margin-right 10px
        cursor pointer
        &:hover
          color rgba(255,255,255,.8)
      .speed-control
        font-size 16px
      .speed-choose
        position: absolute
        bottom 40px
        right 90px
        background-color red
        width 40px
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-items: center
        background-color rgba(0,0,0,.7)
        > span 
          display: inline-block
          width: 100%
          text-align: center
          color #fff
          cursor pointer
          margin 3px 0
      .unshow
        display: none